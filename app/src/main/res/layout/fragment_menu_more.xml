<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMoreFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/on_boarding_button"
            android:elevation="10dp">

            <Button
                android:id="@+id/back_to_menu"
                android:layout_width="10.31dp"
                android:layout_height="18dp"
                android:background="@drawable/back_putih"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:text="Catraksi"
                android:textColor="@color/PUTIH"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="9.69dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/menu_pengguna"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/pengguna"
                android:layout_marginTop="3dp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pengguna"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/menu_tentang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/tentang"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tentang"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </LinearLayout>

    

</FrameLayout>