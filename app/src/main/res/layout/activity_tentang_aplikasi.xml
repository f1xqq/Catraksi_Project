<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TentangAplikasiActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/on_boarding_button"
        android:elevation="10dp">

        <Button
            android:id="@+id/back_tentang"
            android:layout_width="10.31dp"
            android:layout_height="18dp"
            android:background="@drawable/back_putih"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:text="Tentang"
            android:textColor="@color/PUTIH"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="9.69dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="493dp"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_tentang">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="248dp"
                android:layout_height="248dp"
                android:src="@drawable/logo_aplikasi"
                android:layout_gravity="center"/>
            
            <TextView
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:text="@string/tentang"
                android:textAlignment="center"
                android:textSize="16sp"
                android:lineHeight="24sp"
                android:fontFamily="@font/poppins"
                android:textColor="#A7A7A7"
                android:layout_gravity="center"/>
            
        </LinearLayout>

    </FrameLayout>

</LinearLayout>