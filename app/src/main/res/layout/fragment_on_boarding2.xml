<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vPagerFragment.onBoarding.OnBoarding2Fragment">

    <Button
        android:id="@+id/back2"
        android:layout_width="10.31dp"
        android:layout_height="18dp"
        android:background="@drawable/back"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <TextView
        android:id="@+id/lewati2"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginLeft="286dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/poppins"
        android:text="Lewati"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/gambar_OnBoarding2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/gambar_OnBoarding2"
        android:layout_width="300dp"
        android:layout_height="166dp"
        android:src="@drawable/on_boarding_dua"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/txt_informatif"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:text="Informatif"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gambar_OnBoarding2">
    </TextView>

    <TextView
        android:id="@+id/txt_deskripsi2"
        android:layout_width="240dp"
        android:layout_height="83dp"
        android:text="@string/deskripsi_informatif"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:layout_marginTop="90dp"
        android:lineHeight="21sp"
        android:letterSpacing="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_informatif">
    </TextView>

    <Button
        android:id="@+id/next2"
        android:layout_width="186dp"
        android:layout_height="44dp"
        android:text="Lanjut"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:background="@drawable/on_boarding_button"
        android:textColor="@color/PUTIH"
        android:elevation="4dp"
        android:layout_marginTop="149dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_deskripsi2">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>